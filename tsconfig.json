{
    "compilerOptions": {
        "target": "ES2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.test.ts", "__tests__/**/*"]
}
